 '(inhibit-startup-message t)
 '(column-number-mode t)
 '(cua-mode t nil (cua-base))
 '(delete-selection-mode nil)
 '(mark-even-if-inactive t)
 '(scroll-bar-mode (quote right))
 '(show-paren-mode t)
 '(tool-bar-mode nil)
 '(transient-mark-mode 1)
 ;; ** 显示行号
